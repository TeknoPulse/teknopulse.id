---
import { site } from '../config';
---

<header class="sticky top-0 z-50 bg-background shadow-sm dark:bg-background-dark">
  <nav class="container mx-auto flex items-center justify-between px-4 py-4">
    <a href="/" class="text-2xl font-bold text-primary dark:text-accent">
      {site.name}
    </a>

    <div class="hidden items-center space-x-6 md:flex">
      <a
        href="/"
        class="text-gray-700 hover:text-primary dark:text-gray-300 dark:hover:text-accent"
      >
        Home
      </a>

      <div class="group relative">
        <button
          class="flex items-center text-gray-700 hover:text-primary dark:text-gray-300 dark:hover:text-accent"
        >
          Categories
          <svg class="ml-1 h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
            <path
              fill-rule="evenodd"
              d="M5.23 7.21a.75.75 0 011.06.02L10 10.939l3.71-3.71a.75.75 0 111.06 1.061l-4.24 4.24a.75.75 0 01-1.06 0L5.25 8.27a.75.75 0 01-.02-1.06z"
              clip-rule="evenodd"></path>
          </svg>
        </button>
        <div
          class="absolute left-0 top-full hidden w-40 rounded-md bg-background py-2 shadow-lg group-focus-within:block group-hover:block dark:bg-background-dark"
        >
          <a
            href="/category/ai"
            class="block px-4 py-2 text-sm text-gray-700 hover:bg-accent/10 hover:text-primary dark:text-gray-300 dark:hover:bg-accent/20 dark:hover:text-accent"
            >AI</a
          >
          <a
            href="/category/cloud"
            class="block px-4 py-2 text-sm text-gray-700 hover:bg-accent/10 hover:text-primary dark:text-gray-300 dark:hover:bg-accent/20 dark:hover:text-accent"
            >Cloud</a
          >
          <a
            href="/category/security"
            class="block px-4 py-2 text-sm text-gray-700 hover:bg-accent/10 hover:text-primary dark:text-gray-300 dark:hover:bg-accent/20 dark:hover:text-accent"
            >Security</a
          >
          <a
            href="/category/devtools"
            class="block px-4 py-2 text-sm text-gray-700 hover:bg-accent/10 hover:text-primary dark:text-gray-300 dark:hover:bg-accent/20 dark:hover:text-accent"
            >DevTools</a
          >
          <a
            href="/category/policy"
            class="block px-4 py-2 text-sm text-gray-700 hover:bg-accent/10 hover:text-primary dark:text-gray-300 dark:hover:bg-accent/20 dark:hover:text-accent"
            >Policy</a
          >
        </div>
      </div>

      <a
        href="/search"
        class="text-gray-700 hover:text-primary dark:text-gray-300 dark:hover:text-accent"
      >
        Search
      </a>
      <button
        id="theme-toggle"
        class="text-gray-700 hover:text-primary dark:text-gray-300 dark:hover:text-accent"
      >
        <span class="sr-only">Toggle theme</span>
        <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
          <path
            fill-rule="evenodd"
            d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z"
            clip-rule="evenodd"></path>
        </svg>
      </button>
    </div>

    <div class="md:hidden">
      <button
        id="mobile-menu-button"
        class="text-gray-700 hover:text-primary dark:text-gray-300 dark:hover:text-accent"
      >
        <span class="sr-only">Open main menu</span>
        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16m-7 6h7"></path>
        </svg>
      </button>
    </div>
  </nav>

  <div id="mobile-menu" class="hidden md:hidden">
    <div class="space-y-1 px-2 pt-2 pb-3 sm:px-3">
      <a
        href="/"
        class="block rounded-md px-3 py-2 text-base font-medium text-gray-700 hover:bg-accent/10 hover:text-primary dark:text-gray-300 dark:hover:bg-accent/20 dark:hover:text-accent"
        >Home</a
      >
      <div>
        <button
          id="mobile-categories-button"
          class="flex w-full items-center justify-between rounded-md px-3 py-2 text-base font-medium text-gray-700 hover:bg-accent/10 hover:text-primary dark:text-gray-300 dark:hover:bg-accent/20 dark:hover:text-accent"
        >
          Categories
          <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
            <path
              fill-rule="evenodd"
              d="M5.23 7.21a.75.75 0 011.06.02L10 10.939l3.71-3.71a.75.75 0 111.06 1.061l-4.24 4.24a.75.75 0 01-1.06 0L5.25 8.27a.75.75 0 01-.02-1.06z"
              clip-rule="evenodd"></path>
          </svg>
        </button>
        <div id="mobile-categories-menu" class="mt-1 hidden space-y-1">
          <a
            href="/category/ai"
            class="block rounded-md px-3 py-2 text-base font-medium text-gray-700 hover:bg-accent/10 hover:text-primary dark:text-gray-300 dark:hover:bg-accent/20 dark:hover:text-accent"
            >AI</a
          >
          <a
            href="/category/cloud"
            class="block rounded-md px-3 py-2 text-base font-medium text-gray-700 hover:bg-accent/10 hover:text-primary dark:text-gray-300 dark:hover:bg-accent/20 dark:hover:text-accent"
            >Cloud</a
          >
          <a
            href="/category/security"
            class="block rounded-md px-3 py-2 text-base font-medium text-gray-700 hover:bg-accent/10 hover:text-primary dark:text-gray-300 dark:hover:bg-accent/20 dark:hover:text-accent"
            >Security</a
          >
          <a
            href="/category/devtools"
            class="block rounded-md px-3 py-2 text-base font-medium text-gray-700 hover:bg-accent/10 hover:text-primary dark:text-gray-300 dark:hover:bg-accent/20 dark:hover:text-accent"
            >DevTools</a
          >
          <a
            href="/category/policy"
            class="block rounded-md px-3 py-2 text-base font-medium text-gray-700 hover:bg-accent/10 hover:text-primary dark:text-gray-300 dark:hover:bg-accent/20 dark:hover:text-accent"
            >Policy</a
          >
        </div>
      </div>
      <a
        href="/search"
        class="block rounded-md px-3 py-2 text-base font-medium text-gray-700 hover:bg-accent/10 hover:text-primary dark:text-gray-300 dark:hover:bg-accent/20 dark:hover:text-accent"
        >Search</a
      >
    </div>
  </div>
</header>

<script>
  const themeToggle = document.getElementById('theme-toggle');
  const html = document.documentElement;

  // Check for saved theme preference or default to 'light'
  const currentTheme = localStorage.getItem('theme') || 'light';
  html.classList.toggle('dark', currentTheme === 'dark');

  themeToggle?.addEventListener('click', () => {
    const isDark = html.classList.contains('dark');
    html.classList.toggle('dark', !isDark);
    localStorage.setItem('theme', isDark ? 'light' : 'dark');
  });

  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });

  const mobileCategoriesButton = document.getElementById('mobile-categories-button');
  const mobileCategoriesMenu = document.getElementById('mobile-categories-menu');

  mobileCategoriesButton?.addEventListener('click', () => {
    mobileCategoriesMenu?.classList.toggle('hidden');
  });
</script>
