---
import { site } from '../config';
---

<header class="bg-white shadow-sm dark:bg-gray-900">
  <nav class="container mx-auto flex items-center justify-between px-4 py-4">
    <a href="/" class="text-2xl font-bold text-gray-900 dark:text-white">
      {site.name}
    </a>

    <div class="hidden items-center space-x-6 md:flex">
      <a
        href="/"
        class="text-gray-700 hover:text-gray-900 dark:text-gray-300 dark:hover:text-white"
      >
        Home
      </a>
      <a
        href="/category/ai"
        class="text-gray-700 hover:text-gray-900 dark:text-gray-300 dark:hover:text-white"
      >
        AI
      </a>
      <a
        href="/category/cloud"
        class="text-gray-700 hover:text-gray-900 dark:text-gray-300 dark:hover:text-white"
      >
        Cloud
      </a>
      <a
        href="/category/security"
        class="text-gray-700 hover:text-gray-900 dark:text-gray-300 dark:hover:text-white"
      >
        Security
      </a>
      <a
        href="/category/devtools"
        class="text-gray-700 hover:text-gray-900 dark:text-gray-300 dark:hover:text-white"
      >
        DevTools
      </a>
      <a
        href="/category/policy"
        class="text-gray-700 hover:text-gray-900 dark:text-gray-300 dark:hover:text-white"
      >
        Policy
      </a>
      <a
        href="/search"
        class="text-gray-700 hover:text-gray-900 dark:text-gray-300 dark:hover:text-white"
      >
        Search
      </a>
      <button
        id="theme-toggle"
        class="text-gray-700 hover:text-gray-900 dark:text-gray-300 dark:hover:text-white"
      >
        <span class="sr-only">Toggle theme</span>
        <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
          <path
            fill-rule="evenodd"
            d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z"
            clip-rule="evenodd"></path>
        </svg>
      </button>
    </div>

    <div class="md:hidden">
      <button
        id="mobile-menu-button"
        class="text-gray-700 hover:text-gray-900 dark:text-gray-300 dark:hover:text-white"
      >
        <span class="sr-only">Open main menu</span>
        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16m-7 6h7"></path>
        </svg>
      </button>
    </div>
  </nav>

  <div id="mobile-menu" class="hidden md:hidden">
    <div class="space-y-1 px-2 pt-2 pb-3 sm:px-3">
      <a
        href="/"
        class="block rounded-md px-3 py-2 text-base font-medium text-gray-700 hover:bg-gray-50 hover:text-gray-900 dark:text-gray-300 dark:hover:bg-gray-800 dark:hover:text-white"
        >Home</a
      >
      <a
        href="/category/ai"
        class="block rounded-md px-3 py-2 text-base font-medium text-gray-700 hover:bg-gray-50 hover:text-gray-900 dark:text-gray-300 dark:hover:bg-gray-800 dark:hover:text-white"
        >AI</a
      >
      <a
        href="/category/cloud"
        class="block rounded-md px-3 py-2 text-base font-medium text-gray-700 hover:bg-gray-50 hover:text-gray-900 dark:text-gray-300 dark:hover:bg-gray-800 dark:hover:text-white"
        >Cloud</a
      >
      <a
        href="/category/security"
        class="block rounded-md px-3 py-2 text-base font-medium text-gray-700 hover:bg-gray-50 hover:text-gray-900 dark:text-gray-300 dark:hover:bg-gray-800 dark:hover:text-white"
        >Security</a
      >
      <a
        href="/category/devtools"
        class="block rounded-md px-3 py-2 text-base font-medium text-gray-700 hover:bg-gray-50 hover:text-gray-900 dark:text-gray-300 dark:hover:bg-gray-800 dark:hover:text-white"
        >DevTools</a
      >
      <a
        href="/category/policy"
        class="block rounded-md px-3 py-2 text-base font-medium text-gray-700 hover:bg-gray-50 hover:text-gray-900 dark:text-gray-300 dark:hover:bg-gray-800 dark:hover:text-white"
        >Policy</a
      >
      <a
        href="/search"
        class="block rounded-md px-3 py-2 text-base font-medium text-gray-700 hover:bg-gray-50 hover:text-gray-900 dark:text-gray-300 dark:hover:bg-gray-800 dark:hover:text-white"
        >Search</a
      >
    </div>
  </div>
</header>

<script>
  const themeToggle = document.getElementById('theme-toggle');
  const html = document.documentElement;

  // Check for saved theme preference or default to 'light'
  const currentTheme = localStorage.getItem('theme') || 'light';
  html.classList.toggle('dark', currentTheme === 'dark');

  themeToggle?.addEventListener('click', () => {
    const isDark = html.classList.contains('dark');
    html.classList.toggle('dark', !isDark);
    localStorage.setItem('theme', isDark ? 'light' : 'dark');
  });

  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
