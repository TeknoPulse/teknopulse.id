---
import type { CollectionEntry } from 'astro:content';
import { Image } from 'astro:assets';

interface Props {
  posts: CollectionEntry<'posts'>[];
}

const { posts } = Astro.props;
const featuredPosts = posts.slice(0, 3);
---

<section class="py-16">
  <div class="container mx-auto px-4">
    <div class="flex items-center justify-between mb-8">
      <h2 class="text-3xl font-bold text-text-primary dark:text-gray-100">
        ✨ Editor's Picks
      </h2>
      <a href="/posts" class="text-primary hover:text-primary-hover font-medium">
        Lihat Semua →
      </a>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {featuredPosts.map((post, index) => (
        <div class={`group cursor-pointer ${index === 0 ? 'md:col-span-2 lg:col-span-2' : ''}`}>
          <div class="card card-elevated h-full relative overflow-hidden">
            {/* Featured badge for first item */}
            {index === 0 && (
              <div class="absolute top-4 right-4 z-10">
                <span class="bg-accent text-white px-3 py-1 rounded-full text-xs font-medium shadow-lg">
                  Featured
                </span>
              </div>
            )}

            {post.data.coverImage && (
              <div class="relative overflow-hidden rounded-lg">
                <Image
                  src={post.data.coverImage}
                  alt={post.data.title}
                  width={index === 0 ? 600 : 400}
                  height={index === 0 ? 300 : 200}
                  class={`w-full object-cover transition-transform duration-500 group-hover:scale-105 ${
                    index === 0 ? 'h-64 md:h-72' : 'h-48'
                  }`}
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
              </div>
            )}

            <div class="p-6">
              {/* Category badge */}
              <div class="mb-3">
                <span
                  class={`category-badge category-${post.data.category.toLowerCase()}`}
                >
                  {post.data.category}
                </span>
              </div>

              <h3 class={`font-bold text-text-primary dark:text-gray-100 mb-3 group-hover:text-primary transition-colors line-clamp-3 ${
                index === 0 ? 'text-xl md:text-2xl' : 'text-lg'
              }`}>
                {post.data.title}
              </h3>

              <p class="text-text-secondary dark:text-gray-400 mb-4 text-sm leading-relaxed line-clamp-2">
                {post.data.summary}
              </p>

              <div class="flex items-center justify-between text-xs text-text-muted dark:text-gray-500">
                <span>{new Date(post.data.publishedAt).toLocaleDateString('id-ID')}</span>
                <span>{post.data.readingTime} min read</span>
              </div>

              {/* Author info for featured post */}
              {index === 0 && (
                <div class="mt-4 pt-4 border-t border-gray-200 dark:border-gray-700">
                  <div class="flex items-center">
                    <div class="w-8 h-8 bg-primary rounded-full flex items-center justify-center text-white text-sm font-medium mr-3">
                      {post.data.author.charAt(0).toUpperCase()}
                    </div>
                    <div>
                      <p class="text-sm font-medium text-text-primary dark:text-gray-100">
                        {post.data.author}
                      </p>
                      <p class="text-xs text-text-muted dark:text-gray-500">
                        Tech Journalist
                      </p>
                    </div>
                  </div>
                </div>
              )}
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* Enhanced card styles for editor's picks */
  .card-elevated {
    transition: all 0.3s ease;
  }

  .card-elevated:hover {
    transform: translateY(-4px);
    box-shadow: 0 25px 50px rgba(0, 0, 0, 0.15);
  }

  /* Special styling for featured post */
  .group:first-child .card {
    background: linear-gradient(135deg, hsl(210, 95%, 50% / 0.02), hsl(270, 80%, 60% / 0.02));
    border: 2px solid hsl(210, 95%, 50% / 0.1);
  }

  /* Category badge styles */
  .category-ai {
    background-color: rgba(139, 92, 246, 0.1);
    color: hsl(270, 80%, 60%);
  }

  .category-cloud {
    background-color: rgba(59, 130, 246, 0.1);
    color: hsl(195, 80%, 50%);
  }

  .category-security {
    background-color: rgba(239, 68, 68, 0.1);
    color: hsl(0, 85%, 60%);
  }

  .category-devtools {
    background-color: rgba(34, 197, 94, 0.1);
    color: hsl(140, 70%, 45%);
  }

  .category-policy {
    background-color: rgba(251, 146, 60, 0.1);
    color: hsl(38, 90%, 55%);
  }

  /* Dark mode category styles */
  :global(.dark) .category-ai {
    background-color: rgba(139, 92, 246, 0.15);
    color: hsl(270, 80%, 70%);
  }

  :global(.dark) .category-cloud {
    background-color: rgba(59, 130, 246, 0.15);
    color: hsl(195, 80%, 60%);
  }

  :global(.dark) .category-security {
    background-color: rgba(239, 68, 68, 0.15);
    color: hsl(0, 85%, 70%);
  }

  :global(.dark) .category-devtools {
    background-color: rgba(34, 197, 94, 0.15);
    color: hsl(140, 70%, 55%);
  }

  :global(.dark) .category-policy {
    background-color: rgba(251, 146, 60, 0.15);
    color: hsl(38, 90%, 65%);
  }

  :global(.dark) .group:first-child .card {
    background: linear-gradient(135deg, hsl(210, 95%, 50% / 0.05), hsl(270, 80%, 60% / 0.05));
    border-color: hsl(210, 95%, 50% / 0.2);
  }
</style>