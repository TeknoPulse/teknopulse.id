<div id="search">
  <input
    type="text"
    id="search-input"
    placeholder="Cari berita..."
    class="w-full rounded-md border border-gray-300 px-4 py-2 focus:ring-2 focus:ring-blue-500 focus:outline-none dark:border-gray-600 dark:bg-gray-800 dark:text-white"
  />
  <div id="search-results" class="mt-4">
    <p class="text-sm text-gray-500 dark:text-gray-400">
      Search functionality will be available after deployment with Pagefind integration.
    </p>
  </div>
</div>

<script>
  // Basic search functionality placeholder
  const searchInput = document.getElementById('search-input') as HTMLInputElement;
  const searchResults = document.getElementById('search-results');

  if (searchInput && searchResults) {
    searchInput.addEventListener('input', (e) => {
      const query = (e.target as HTMLInputElement).value;
      if (query.length > 2) {
        searchResults.innerHTML = `<p class="text-gray-500 dark:text-gray-400 text-sm">Searching for "${query}"... (Pagefind integration pending)</p>`;
      } else {
        searchResults.innerHTML = `<p class="text-gray-500 dark:text-gray-400 text-sm">Search functionality will be available after deployment with Pagefind integration.</p>`;
      }
    });
  }
</script>
